<%- include('partials/header', { title, page }) %>

<!-- Projects: at least 3 projects, each with an image + short description :contentReference[oaicite:21]{index=21} -->
<h2 class="fw-bold mb-4">Highlighted Projects</h2>

<div class="row g-4">
  <% projects.forEach(p => { %>
    <div class="col-12 col-md-6 col-lg-4">
      <article class="card h-100 shadow-sm">
        <img src="<%= p.img %>" class="card-img-top" alt="<%= p.title %> screenshot" />
        <div class="card-body d-flex flex-column">
          <h3 class="h5 card-title"><%= p.title %></h3>
          <p class="card-text flex-grow-1"><%= p.description %></p>
        </div>
      </article>
    </div>
  <% }) %>
</div>

<%- include('partials/footer') %>
